<div class="container">
<h2> Diligencie la informaci√≥n para registrarse como candidato</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :last_name, required: true %>
    <%= f.input :tax_id_number, required: true %>
    <%= f.input :place_of_birth, required: true %>
    <%= f.input :place_of_residence, required: true %>
    <%= f.input :address, required: true %>
    <%= f.input :residence_area_type, required: true, collection: ["Rural", "Otra"] %>
    <%= f.input :phone, required: true, as: :tel %>
    <%= f.input :secondary_phone, as: :tel %>
    <%= f.input :education_level, required: true %>
    <%= f.input :expertise, required: true, as: :text %>
    <%= f.input :value_proposition, required: true, as: :text %>
    <%= f.input :photo, as: :file %>
    <%= f.input :document, as: :file  %>
    <%= f.input :confirmation_letter, as: :file  %>
    <%= f.input :organization_confirmation_letter, as: :file  %>
    <%= f.input :disclaimer, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Actualizar", class:"btn btn-primary" %>
  </div>
<% end %>
</div>
